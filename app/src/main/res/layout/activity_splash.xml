<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity"
    android:background="@drawable/spalsh_screen"
    >

    <ImageView
        android:id="@+id/whiteCloud"
        android:layout_width="211dp"
        android:layout_height="140dp"
        android:src="@drawable/white_cloud"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="268dp"
  />

    <TextView
        android:id="@+id/textV1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="@string/weather_matters_nwe_ve_got_the_details"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textAlignment="center"
        android:fontFamily="@font/merriweathersans_bold"
        app:layout_constraintEnd_toEndOf="@+id/whiteCloud"
        app:layout_constraintStart_toStartOf="@+id/whiteCloud"
        app:layout_constraintTop_toBottomOf="@id/whiteCloud" />
    <TextView
        android:id="@+id/textV2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="@string/design_by_nneat_roots"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textAlignment="center"
        android:fontFamily="@font/merriweathersans_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textV1"
        />




</androidx.constraintlayout.widget.ConstraintLayout>